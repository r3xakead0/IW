<div class="container pt-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <form action="/tickets/document" method="POST" enctype="multipart/form-data">
                <div class="form-group row">
                    <label for="nroTicket" class="col-sm-2 col-form-label">Nro Ticket</label>
                    <div class="col-sm-10">
                        <input type="number" readonly id="nroTicket" name="nroTicket" class="form-control"
                            value="{{nroTicket}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="documento" class="col-sm-2 col-form-label">Documento</label>
                    <div class="col-sm-10">
                        <input type="file" name="documento" class="form-control-file" accept=".pdf" required>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Agregar
                    </button>
                </div>
            </form>
        </div>

    </div>
</div>