<div class="container-fluid pt-4">

    <div class="row">
        <div class="col col-xs-4">
            <strong>PÃ¡gina {{ pagination.page }} de {{ pagination.pageCount }} </strong>
        </div>
        <div class="col col-xs-8">
            <nav aria-label="navigation" class="float-right" role="pagination">
                {{{paginate pagination }}}
            </nav>
        </div>
    </div>

    <table class="table table-striped table-sm">
        <thead>
            <tr class="text-center">
                <th scope="col">#Ticket </th>
                <th scope="col">Sala</th>
                <th scope="col">Especialidad</th>
                <th scope="col">Equipo</th>
                <th scope="col">Inicio </th>
                <th scope="col">Final</th>
                <th scope="col">Supervisor</th>
                <th scope="col">Actividad</th>
                <th scope="col">Descripcion del Trabajo</th>
                <th scope="col">Cliente</th>
                <th scope="col">Proveedor</th>
                <th scope="col">Personal (Cliente/Proveedor)</th>
                <th scope="col">Documentos</th>
                <th scope="col">Accion</th>
            </tr>
        </thead>
        <tbody>
            {{#each tickets}}
            <tr>
                <th scope="row">{{nroTicket}}</th>
                <td>{{sala}}</td>
                <td>{{especialidad}}</td>
                <td>{{equipo}}</td>
                <td>{{fechaHoraInicio}}</td>
                <td>{{fechaHoraFin}}</td>
                <td>{{supervisor}}</td>
                <td>{{actividad}}</td>
                <td>{{descripcionTrabajo}}</td>
                <td>{{cliente}}</td>
                <td>{{proveedor}}</td>
                <td>{{personal}}</td>
                <td>
                    {{#each documentos}}
                    <a href="document/{{nombre}}" target="_blank">{{nombre}}<br>
                        {{/each}}
                </td>
                <td class="text-center">
                    <a href="/tickets/edit/{{nroTicket}}">
                        <i class="fas fa-marker" title="Modificar"></i>
                    </a><br>
                    {{#isEqual ../user.administrador 1}} 
                    <a href="/tickets/delete/{{../nroTicket}}">
                        <i class="far fa-trash-alt" title="Eliminar"></i>
                    </a><br>
                    {{/isEqual}}
                    <a href="/tickets/document/{{nroTicket}}">
                        <i class="fa fa-plus" title="Agregar Documento"></i>
                    </a>
                </td>
            </tr>
            {{else}}
            <tr class="text-center">
                <td colspan="14">No existen registros</td>
            </tr>
            {{/each}}

        </tbody>
    </table>
</div>