<div class="container-fluid p-2">
    <div class="row">
        <div class="col col-xs-4">
            <a href="/athletes/add" class="btn btn-success">
                <i class="fas fa-plus" title="Nuevo"></i>
                <span>Nuevo</span>
            </a>
        </div>
        <div class="col col-xs-8">
            <nav aria-label="navigation" class="float-right" role="pagination">
                {{{paginate pagination }}}
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <span class="d-block bg-primary text-white text-center">Listado de Atletas</span>
        </div>
    </div>
    <table class="table table-striped table-sm">
        <thead>
            <tr class="text-center">
                <th scope="col">Nombres</th>
                <th scope="col">Apellidos</th>
                <th scope="col">Nacimiento</th>
                <th scope="col">Edad</th>
                <th scope="col">Telefono</th>
                <th scope="col">Estado</th>
                <th scope="col">Accion</th>
            </tr>
        </thead>
        <tbody>
            {{#each Athletes}}
            <tr>
                <td scope="row">{{firstname}}</td>
                <td>{{lastname}}</td>
                <td>{{birthdate}}</td>
                <td>{{age}}</td>
                <td>{{phonenumber}}</td>
                <td class="text-center">
                    {{#if active}}
                    Activo
                    {{else}}
                    Inactivo
                    {{/if}}
                </td>
                <td class="text-center">
                    <a href="/athletes/edit/{{id}}" >
                        <i class="fas fa-marker" title="Modificar"></i>
                    </a>
                    <a href="/athletes/{{id}}?_method=DELETE">
                        <i class="far fa-trash-alt" title="Eliminar"></i>
                    </a>
                </td>
            </tr>
            {{else}}
            <tr class="text-center">
                <td colspan="7">No existen registros</td>
            </tr>
            {{/each}}

        </tbody>
    </table>
</div>
</div>